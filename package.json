{
  "name": "micro-frontends",
  "private": true,
  "version": "1.0.0",
  "description": "example repo for micro frontends with react and dependency inversion as integration pattern",
  "main": "index.js",
  "repository": "https://github.com/denise-schaefer/micro-frontends.git",
  "author": "Denise Sch√§fer <denise.schaefer@dm.de>",
  "license": "MIT",
  "workspaces": [
    "search",
    "search-api",
    "product",
    "content",
    "composer",
    "slide-notes",
    "screenshooter"
  ],
  "scripts": {
    "dev": "yarn build && yarn serve",
    "build": "yarn --cwd search-api build && yarn --cwd search build && yarn --cwd product build && yarn --cwd content build",
    "lint": "eslint --fix ./",
    "format": "prettier --write \"**/*.js\" \"**/*.jsx\"",
    "pdf": "node ./screenshooter"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-jest": "22.4.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.6.0",
    "jest": "24.7.1",
    "prettier": "1.16.4"
  }
}
